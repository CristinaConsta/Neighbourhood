<html lang="en">

<head>
    <title>Statistics</title>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <!-- Chart.js docs: https://www.chartjs.org/   -------------- Demo reffered from chartjs.org ------------------ -->
    <script defer src="../assets/plugins/fontawesome/js/all.min.js"></script>
    <link id="theme-style" rel="stylesheet" href="../assets/css/portal.css">
</head>

<body class="app">
    <div class="app-wrapper">
        <div class="app-content pt-3 p-md-3 p-lg-4">
            <div class="container-xl">
                <h1 class="app-page-title">Statistics</h1>
                <div class="row g-4 mb-4">
                    <div class="col-12 col-lg-6">
                        <div class="app-card app-card-chart h-100 shadow-sm">
                            <div class="app-card-header p-3 border-0">
                                <!-- Area chart -->
                                <h4 class="app-card-title">Current year - Montly incidents number</h4>
                            </div>
                            <div class="app-card-body p-4">
                                <div class="chart-container">
                                    <canvas id="chart-line"></canvas>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-12 col-lg-6">
                        <div class="app-card app-card-chart h-100 shadow-sm">
                            <div class="app-card-header p-3 border-0">
                                <!-- Bar chart -->
                                <h4 class="app-card-title">London incidents by Borough</h4>
                            </div>
                            <div class="app-card-body p-4">
                                <div class="chart-container">
                                    <canvas id="chart-bar"></canvas>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-12 col-lg-6">
                        <div class="app-card app-card-chart h-100 shadow-sm">
                            <div class="app-card-header p-3 border-0">
                                <!-- Pie chart -->
                                <h4 class="app-card-title">Top 10 reported incidents type</h4>
                            </div>
                            <div class="app-card-body p-4">
                                <div class="chart-container">
                                    <canvas id="chart-pie"></canvas>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-12 col-lg-6">
                        <div class="app-card app-card-chart h-100 shadow-sm">
                            <div class="app-card-header p-3 border-0">
                                <!-- Doughnut chart -->
                                <h4 class="app-card-title">Incidents by City</h4>
                            </div>
                            <div class="app-card-body p-4">
                                <div class="chart-container">
                                    <canvas id="chart-doughnut"></canvas>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    
    <!-- <small class="copyright">Designed with <i class="fas fa-heart" style="color: #fb866a;"></i> by <a class="app-link" href="http://themes.3rdwavemedia.com" target="_blank">Xiaoying Riley</a> for developers</small> -->

    <script src="../assets/plugins/popper.min.js"></script>
    <script src="../assets/plugins/bootstrap/js/bootstrap.min.js"></script>
    <script src="../assets/plugins/chart.js/chart.min.js"></script>
    <!-- scripts for loading data in charts -->
    <script src="../statistics.js"></script>  
    <script src="../assets/js/app.js"></script> 
</body>

</html>