<html lang="en">

<head>
  <!-- Required meta tags -->
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
  
</head>
<body>

    <div class="container-fluid mx-auto pt-5" style=width:50%;>
    <div class="bg-info" id="CreatePost" tabindex="-1" aria-hidden="true">
        <h5 class="title text-white pt-2 text-center">Post Your Story</h5>
    </div>
            <div class="body">
              <form action="/create-post" method=POST>
                <div class="row">
                  <div class="col-md-4">
                  <label for="City" class="col-form-label">City:</label>
                  <input id="City" name="city" type="text" class="form-control">
                  <% if(errors['city']) { %>         
                    <p style="color: red"><%= errors['city'].message %></p> 
                    <% } %>
                  </div>
                  <div class="col-md-4">
                  <label for="Borough" class="col-form-label">Borough:</label>
                  <input id="Borough" name="borough" type="text" class="form-control">
                  <% if(errors['borough']) { %>         
                    <p style="color: red"><%= errors['borough'].message %></p> 
                    <% } %>
                  </div>
                  <div class="col-md-4">
                    <label for="PostCode" class="col-form-label">Post Code:</label>
                    <input id="PostCode" name="postCode" type="text" class="form-control">
                  </div>
                </div>
                <button class="btn btn-light border pt-3 mt-2" type="button" data-bs-toggle="collapse" data-bs-target="#IncidentType" aria-expanded="false">Incident Type...</button>
              <div class="collapse" id="IncidentType" name="IncidentType" >
              <%
               types.forEach(type => { 
              %>
                <li class="list-group-item">
                 <input class="form-check-input me-1" id="IncidentType" name="IncidentType" type="radio" value="<%= type.type %>" aria-label="...">
                 <%= type.type %>
                </li>
              <%
              });
              %> 
           </div>
           <% if(errors['type']) { %>         
            <p style="color: red"><%= errors['type'].message %></p> 
            <% } %>  
                <div class="pt-3 mb-1">
                  <label for="Message" class="col-form-label">Your message:</label>
                  <textarea id="Message" name="message" type="text" class="form-control"></textarea>
                  <% if(errors['message']) { %>         
                    <p style="color: red"><%= errors['message'].message %></p> 
                    <% } %>
                </div>
                <a role="button" id="cancel" type="reset" class="btn btn-danger" href="/">Cancel</a>
               <button id="CreatePost" class="btn btn-info">Submit</button>
              </form>
            </div>
      </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM" crossorigin="anonymous"></script>
    </body>
    </html>