<html lang="en">

  <head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <!-- Bootstrap CSS -->
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
    <title>Neighbourhood Watch</title>
    </head>

    <body>
        <%- include('common/header'); %>
        <div class="app-content pt-3 p-md-3 p-lg-4">
          <div class="position-relative mb-3">
            <!-- <div class="row g-3 justify-content-between"> -->
        <div class="row">
            <div class="col-sm-9">
             <h1 class="app-page-title mb-3">Your posts</h1>
      <% posts.forEach(post => { %>
        <div class="card card-notification bg-light mb-4;">
          <div class="card-header px-4 py-3 text-lg-start"><%= post.CrimeType %>
            <div class="row g-3 align-items-center">
              <div class="col-12 col-lg-auto text-center text-lg-start">
                <!-- <div class="notification-type mb-2"><span class="badge bg-danger"></span></div> -->
                <ul class="notification-meta list-inline mb-0">
                  <li class="list-inline-item" ><%= post.Date %></li>
                  <li class="list-inline-item">|</li>
                  <li class="list-inline-item"><%= post.City %></li>
                  <li class="list-inline-item">|</li>
                  <li class="list-inline-item"><%= post.Borough %></li>
                </ul>
              </div>
            </div>
          </div>
          <div class="app-card-body p-4">
            <div class="notification-content"><%= post.Message %></div>
          </div>
            <div class="app-card-body p-4 ">
              <% post.Comments.forEach(comment => { %>
                <div class="notification-content"><%= comment.Date %>:</div>
                <div class="text-info notification-content"><%= comment.Comment %></div>
                <br>
              <%
              });
              %>
            </div>
          </div>
          <br>
      <%
      });
      %>             
           </div>
         <div class="col-sm-3 border-left">
            <a href="/my-account/delete" class="btn btn-danger btn-xs mt-5" type="submit" onclick="clicked(event)">Delete Account</a>
      </div>
        </div>
</div>
<!-- </div> -->
</div>
<script> function clicked(e) {if(!confirm('Are you sure you want to delete your account?')) { e.preventDefault();}}
  </script>
      <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM" crossorigin="anonymous"></script>
          <!-- <script src="assets/js/app.js"></script>  -->
    
          <%- include('common/footer'); %>
    </body> 
</html>